# EVIDENT Environment Variables Template
# Copy this file to .env and fill in your values

# Application
APP_NAME=EVIDENT
APP_VERSION=1.0.0
DEBUG=false

# Database
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://evident:your_password_here@localhost:5432/evident

# JWT Authentication
# Generate a secure random string for production (e.g., openssl rand -hex 32)
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Paths
# Path to llama.cpp model file (GGUF format)
# Example: /path/to/models/llama-2-7b-chat.Q4_K_M.gguf
LLM_MODEL_PATH=/path/to/your/llm/model.gguf

# Vector Store Settings
EMBEDDING_MODEL_NAME=intfloat/e5-base
EMBEDDING_DIMENSION=768

# LLM Settings
LLM_N_CTX=4096
LLM_N_THREADS=4
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=500

# RAG Settings
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_CONFIDENCE_THRESHOLD=0.7

# Chunking Settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
